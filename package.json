{
  "name": "cryptovault-dapp",
  "version": "1.0.0",
  "type": "module",
  "description": "CryptoVault - Confidential DeFi Platform using Zama FHE Protocol",
  "main": "index.js",
  "scripts": {
    "compile": "npx hardhat compile",
    "test": "npx hardhat test",
    "node": "npx hardhat node",
    "deploy": "npx hardhat run scripts/deploy.js",
    "deploy-sepolia": "npx hardhat run scripts/deploy-sepolia.js --network sepolia",
    "deploy-local": "npx hardhat run scripts/deploy-local.js --network localhost",
    "setup-local": "npx hardhat run scripts/setup-local.js --network localhost",
    "frontend": "cd frontend && npm start",
    "frontend-build": "cd frontend && npm run build",
    "frontend-install": "cd frontend && npm install",
    "start-3023": "cd frontend && DANGEROUSLY_DISABLE_HOST_CHECK=true SKIP_PREFLIGHT_CHECK=true PORT=3023 npm start",
    "verify": "npx hardhat run scripts/verify-contracts.js",
    "gas-report": "REPORT_GAS=true npx hardhat test",
    "coverage": "npx hardhat coverage",
    "clean": "npx hardhat clean && rm -rf frontend/build",
    "build": "npm run compile && npm run frontend-build"
  },
  "keywords": [
    "ethereum",
    "solidity",
    "defi",
    "fhe",
    "privacy",
    "zama",
    "hardhat",
    "react",
    "cryptovault"
  ],
  "author": "CryptoVault Team",
  "license": "UNLICENSED",
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "hardhat": "^2.22.0"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.0.0",
    "ethers": "^6.4.0",
    "dotenv": "^16.0.0"
  }
}